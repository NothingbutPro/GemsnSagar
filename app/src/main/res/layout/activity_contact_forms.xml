<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactForms"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:background="@color/cardview_dark_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="25dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:text= "Jyotish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </TextView>

    </android.support.v7.widget.Toolbar>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:padding="20dp"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:textAlignment="center"
            android:padding="5dp"
            android:textColor="@color/blackk"
            android:textSize="15dp"
            android:text="Rashi"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:textAlignment="center"
            android:padding="5dp"
            android:textColor="@color/blackk"
            android:textSize="15dp"
            android:text="Ratna"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:textAlignment="center"
            android:padding="5dp"
            android:textColor="@color/blackk"
            android:textSize="15dp"
            android:text="Dhatu"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:textAlignment="center"
            android:padding="5dp"
            android:textColor="@color/blackk"
            android:textSize="15dp"
            android:text="Mantra"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:textColor="@color/blackk"
                android:textSize="20dp"
                android:textAlignment="center"
                android:text="Contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
        </android.support.v7.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15dp"
            android:text="Name:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/bname"
            android:padding="5dp"
            android:background="@null"
            android:textSize="15dp"
            android:hint="Boy's Name:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>

    </android.support.design.widget.TextInputLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/gname"
            android:padding="5dp"
            android:background="@null"
            android:textSize="15dp"
            android:hint="Girl's Name:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>

        </android.support.design.widget.TextInputLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15dp"
            android:text="Birth's Dates:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:focusable="false"
                    android:id="@+id/boybirthdate"
                    android:padding="5dp"
                    android:background="@null"
                    android:textSize="15dp"
                    android:hint="Boy's Birth Date:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></EditText>

            </android.support.design.widget.TextInputLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:focusable="false"
                    android:id="@+id/girlbirthdate"
                    android:padding="5dp"
                    android:background="@null"
                    android:textSize="15dp"
                    android:hint="Girl's Birth Date:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></EditText>

            </android.support.design.widget.TextInputLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15dp"
            android:text="Birth Time:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:focusable="false"
                    android:id="@+id/boybirthtime"
                    android:padding="5dp"
                    android:background="@null"
                    android:textSize="15dp"
                    android:hint="Boy's Birth Time:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></EditText>

            </android.support.design.widget.TextInputLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:focusable="false"
                    android:id="@+id/girlbirthtime"
                    android:padding="5dp"
                    android:background="@null"
                    android:textSize="15dp"
                    android:hint="Girl's  Birth Time:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></EditText>

            </android.support.design.widget.TextInputLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15dp"
            android:text="Birth Place:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/boybirthplace"
                    android:padding="5dp"
                    android:background="@null"
                    android:textSize="15dp"
                    android:hint="Boy's Birth Place:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></EditText>

            </android.support.design.widget.TextInputLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/girlbirthplace"
                    android:padding="5dp"
                    android:background="@null"
                    android:textSize="15dp"
                    android:hint="Girl's Birth Place:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></EditText>

            </android.support.design.widget.TextInputLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15dp"
            android:text="Comments:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/commentboy"
                    android:padding="5dp"
                    android:background="@null"
                    android:textSize="15dp"
                    android:hint="Comment About Boy:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></EditText>

            </android.support.design.widget.TextInputLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/commentgirl"
                    android:padding="5dp"
                    android:background="@null"
                    android:textSize="15dp"
                    android:hint="Comment about Girl:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></EditText>

            </android.support.design.widget.TextInputLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <Button
        android:id="@+id/senit"
        android:textColor="@color/white"
        android:text="Send"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Button>
</LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>